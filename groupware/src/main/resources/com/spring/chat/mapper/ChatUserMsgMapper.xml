<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.chat.mapper.ChatUserMsgMapper">

	<select id="chatList" resultType="com.spring.chat.domain.ChatUserMsgrVo">
		select * from chatUserMsg where chatroom_num = #{chatroom_num} 
	</select>

	<insert id="insertMsg">
		insert into chatUserMsg(chatroom_num,sender_name,send_date,chat_msg)
					values(#{chatroom_num},#{sender_name},sysdate,#{chat_msg});
	</insert>

</mapper>