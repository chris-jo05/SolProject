<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.chat.mapper.ChatRoomMapper">

	<insert id="insertChatRoom">
		insert into chatRoom(chatroom_num,sender_name,receiver_name)
		values(chat_room_SEQ.nextval,#{sender_name},#{receiver_name})
	</insert>
	
	<select id="chatRoomList" resultType="com.spring.chat.domain.ChatRoomVo">
		select * from chatroom where sender_name=#{sender_name} or receiver_name=#{sender_name}
	</select>

</mapper>