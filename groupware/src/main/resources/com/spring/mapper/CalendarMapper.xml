<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.CalendarMapper">
	
	<!-- 일정 전체 리스트 -->
	<select id="list" resultType="com.spring.domain.CalendarVO">
		select * from calendar
	</select>
	
	<!-- 일정 하나 가져오기 -->
	<select id="get" resultType="com.spring.domain.CalendarVO">
		select * from calendar where cno = #{cno}
	</select>
	
	<!-- 일정 담당자 이름 가져오기 -->
	<select id="getRepName" resultType="java.lang.String">
		select e.ename 
		from calendar, emp e
		where calendar.eno = e.eno and title=#{title}
	</select>
</mapper>