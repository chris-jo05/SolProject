<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.MailBoardMapper">

	<!-- eno에 따른 메일 리스트 조회 -->
	<select id="mailList" resultType="com.spring.domain.MailBoardVo">
		select * from e_mail where e_id=#{e_id}
	</select>
	
	<!-- m_no에 따른 메일 읽기 -->
	<select id="readMail" resultType="com.spring.domain.MailBoardVo">
		select * from e_mail where m_no=#{m_no}
	</select>
	
	<!-- 메일 쓰기 -->
	<insert id="writeMail">
		insert into e_mail(m_title,m_content, e_id, eno, m_read, m_writer, m_id) 
		  values(#{m_title}, #{m_content}, #{e_id}, #{eno}, #{m_read}, #{m_writer}, #{m_id})
	</insert>
</mapper>